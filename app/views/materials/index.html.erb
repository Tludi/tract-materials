<p id="notice"><%= notice %></p>

<h1>Materials</h1>

<table>
  <thead>
    <tr>
      <th>Item Code</th>
      <th>Description</th>
      <th>Item Unit</th>
      <th>Unit Price</th>
      <th>Order Unit</th>
      <th>Conversion Rate</th>
      <th>Price Date</th>
      <th>Price Age</th>
      <th>Markup %</th>
      <th>Waste %</th>
      <th>Waste Qty</th>
      <th>Job Cost Code</th>
      <th>Production Rate</th>
      <th>Note</th>
      <th>Labor Class Code</th>
      <th>Labor Class Rate</th>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.itemCode %></td>
        <td><%= material.description %></td>
        <td><%= material.itemUnit %></td>
        <td><%= material.unitPrice %></td>
        <td><%= material.orderUnit %></td>
        <td><%= material.conversionRate %></td>
        <td><%= material.priceDate %></td>
        <td><%= material.priceAge %></td>
        <td><%= material.markup %></td>
        <td><%= material.wastePercent %></td>
        <td><%= material.wasteQuantity %></td>
        <td><%= material.jobCostCode %></td>
        <td><%= material.productionRate %></td>
        <td><%= material.note %></td>
        <td><%= material.laborClassCode %></td>
        <td><%= material.laborClassRate %></td>

        <td><%= link_to 'Show', material %></td>
        <td><%= link_to 'Edit', edit_material_path(material) %></td>
        <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<hr>

<h3>Import Materials</h3>
<%= form_tag import_materials_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<br>
<hr>

