<p id="notice"><%= notice %></p>

<h3>Project: <%= @project.projectName %></h3>
<br><hr>

<h1>Line Items</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Trade</th>
      <th>Itemcode</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Units</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.project_id %></td>
        <td><%= line_item.trade %></td>
        <td><%= line_item.itemCode %></td>
        <td><%= line_item.description %></td>
        <td><%= line_item.quantity %></td>
        <td><%= line_item.units %></td>
        <td><%= link_to 'Show', line_item %></td>
        <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Import Line Items</h3>
<%= form_tag import_line_items_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<br>
<hr>

<%= link_to 'New Line Item', new_line_item_path %>

