<%= simple_form_for(@line_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :trade %>
    <%= f.input :itemCode %>
    <%= f.input :description %>
    <%= f.input :quantity %>
    <%= f.input :units %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
